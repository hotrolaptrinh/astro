---
const { page = 1, total = 5 } = Astro.props;
const pages = Array.from({ length: total }, (_, i) => i + 1);
---
<nav class="join my-8 justify-center w-full">
  <a class="join-item btn btn-sm" href={`?page=${Math.max(1, page-1)}`}>«</a>
  {pages.map(p => (
    <a class={`join-item btn btn-sm ${p===page ? "btn-active" : ""}`} href={`?page=${p}`}>{p}</a>
  ))}
  <a class="join-item btn btn-sm" href={`?page=${Math.min(total, page+1)}`}>»</a>
</nav>
