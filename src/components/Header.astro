---
const nav = [
  { href: "#projects", label: "Dự án" },
  { href: "#request",  label: "Yêu cầu" },
  { href: "#contact",  label: "Liên hệ" },
  { href: "#faq",      label: "FAQ" },
];
---

<header class="sticky top-0 z-50 bg-base-100/80 backdrop-blur border-b border-base-300">
  <div class="navbar container mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Mobile menu button -->
    <div class="navbar-start">
      <div class="dropdown">
        <label tabindex="0" class="btn btn-ghost lg:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
               viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round"
               stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>
        </label>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52">
          {nav.map((n) => (
            <li><a href={n.href}>{n.label}</a></li>
          ))}
        </ul>
      </div>

      <!-- Logo -->
      <a href="/" class="btn btn-ghost normal-case text-xl font-bold">MySite</a>
    </div>

    <!-- Desktop menu -->
    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1">
        {nav.map((n) => (
          <li><a href={n.href} class="font-medium">{n.label}</a></li>
        ))}
      </ul>
    </div>

    <!-- Right actions -->
    <div class="navbar-end gap-2">
      <!-- Search (desktop) -->
      <label class="input input-bordered items-center gap-2 hidden sm:flex">
        <svg xmlns="http://www.w3.org/2000/svg" class="size-4 opacity-70" viewBox="0 0 16 16" fill="currentColor">
          <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398l3.85 3.85a1 1 0 0 0 1.415-1.415l-3.867-3.833Z"/>
        </svg>
        <input type="text" placeholder="Tìm dự án..." class="grow" />
      </label>

      <!-- Theme toggle -->
      <button id="themeToggle" class="btn btn-ghost btn-circle" aria-label="Đổi giao diện">
        <svg id="sunIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 18a6 6 0 1 1 0-12 6 6 0 0 1 0 12Z" />
        </svg>
        <svg id="moonIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" viewBox="0 0 24 24" fill="currentColor">
          <path d="M21.75 15.5a9 9 0 0 1-11.25-11 9 9 0 1 0 11.25 11Z"/>
        </svg>
      </button>

      <!-- CTA -->
      <a href="/login" class="btn btn-primary">Đăng nhập</a>
    </div>
  </div>
</header>

<script>
  const toggleBtn = document.getElementById("themeToggle");
  const sun = document.getElementById("sunIcon");
  const moon = document.getElementById("moonIcon");

  const applyTheme = (dark) => {
    document.documentElement.dataset.theme = dark ? "dark" : "light";
    localStorage.setItem("theme", dark ? "dark" : "light");
    sun.classList.toggle("hidden", !dark);
    moon.classList.toggle("hidden", dark);
  };

  (() => {
    const stored = localStorage.getItem("theme");
    if (stored) return applyTheme(stored === "dark");
    const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
    applyTheme(prefersDark);
  })();

  toggleBtn.addEventListener("click", () => {
    const isDark = document.documentElement.dataset.theme === "dark";
    applyTheme(!isDark);
  });
