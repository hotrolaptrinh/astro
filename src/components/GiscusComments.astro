---
const repo = import.meta.env.PUBLIC_GISCUS_REPO || "user/repo";
const repoId = import.meta.env.PUBLIC_GISCUS_REPO_ID || "";
const category = import.meta.env.PUBLIC_GISCUS_CATEGORY || "General";
const categoryId = import.meta.env.PUBLIC_GISCUS_CATEGORY_ID || "";
---
<section id="comments" class="py-12">
  <div class="container mx-auto px-4 max-w-3xl">
    <h2 class="text-2xl font-bold mb-6">Bình luận</h2>
    <script src="https://giscus.app/client.js"
            data-repo={repo}
            data-repo-id={repoId}
            data-category={category}
            data-category-id={categoryId}
            data-mapping="pathname"
            data-strict="0"
            data-reactions-enabled="1"
            data-emit-metadata="0"
            data-input-position="bottom"
            data-theme="light"
            data-lang="vi"
            crossorigin="anonymous"
            async>
    </script>
    <noscript>Vui lòng bật JavaScript để xem bình luận từ Giscus.</noscript>
  </div>
</section>
